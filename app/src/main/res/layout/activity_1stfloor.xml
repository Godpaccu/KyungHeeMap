<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_1stfloor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible">

    <Button
        android:id="@+id/button_back"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#FFFFFF"
        android:text="\u003C"
        android:textColor="#000000"
        android:visibility="visible" />

    <TextView
        android:id="@+id/ntd2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="40dp"
        android:text="공과대학(공대)"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="110dp"
        android:backgroundTint="#FF4081"
        android:text="1층" />

    <Button
        android:id="@+id/button_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="110dp"
        android:text="2층" />

    <Button
        android:id="@+id/button_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="110dp"
        android:text="3층" />

    <Button
        android:id="@+id/button_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="160dp"
        android:text="4층" />

    <Button
        android:id="@+id/button_five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="160dp"
        android:text="5층" />

    <Button
        android:id="@+id/button_six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="160dp"
        android:text="6층" />


    <TextView
        android:id="@+id/viewlabels"
        android:layout_width="match_parent"
        android:layout_height="323dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="450dp"
        app:layout_anchor="@+id/searchView"
        app:layout_anchorGravity="bottom|center" />

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="850dp"
        android:backgroundTint="#DAD6D6" />

    <TextView
        android:id="@+id/ntd1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="80dp"
        android:text="왼팔   본관   실험동   오른팔"
        android:textColor="#D5D0D0" />

    <Button
        android:id="@+id/m176_3"
        android:layout_width="25dp"
        android:layout_height="37dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="470dp"
        android:backgroundTint="#00FFFF00"
        android:visibility="visible"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="394dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="200dp"
        app:srcCompat="@drawable/main1" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>